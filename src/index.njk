---
layout: base.njk
---

{# 获取当前语言 #}
{% set currentLang = "en" %}
{% for lang in ["zh", "ja", "ko", "fil", "vi", "id", "ms", "th", "ru", "uk", "de", "pt"] %}
    {% if page.url.startsWith("/" + lang + "/") %}
        {% set currentLang = lang %}
    {% endif %}
{% endfor %}
{# 获取当前页面的i18n数据 #}
{% if i18n[currentLang] %}
    {% set translations = i18n[currentLang] %}
{% else %}
    {% set translations = i18n["en"] %}
{% endif %}
<style>
    .page-shell {
        position: relative;
        border-radius: 36px;
        border: 1px solid rgba(255, 84, 157, 0.15);
        box-shadow: 0 30px 80px rgba(9, 4, 24, 0.55);
        overflow: hidden;
        backdrop-filter: blur(12px);
    }
    .page-shell::before {
        content: "";
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at top left, rgba(255, 84, 157, 0.18), transparent 55%),
                    radial-gradient(circle at bottom right, rgba(95, 46, 107, 0.35), transparent 50%);
        pointer-events: none;
        z-index: 0;
    }
    .page-shell > * {
        position: relative;
        z-index: 1;
    }
    .section-surface {
        position: relative;
        padding: clamp(2rem, 3vw, 3.5rem);
        margin-bottom: clamp(2.5rem, 4vw, 4.5rem);
        border-radius: 28px;
        border: 1px solid rgba(255, 84, 157, 0.12);
        background: rgba(35, 26, 34, 0.86);
        overflow: hidden;
        box-shadow: 0 24px 60px rgba(5, 2, 15, 0.55);
    }
    .section-surface::before {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, rgba(255, 84, 157, 0.22), transparent 40%),
                    linear-gradient(315deg, rgba(111, 76, 130, 0.35), transparent 55%);
        opacity: 0.8;
        pointer-events: none;
        transition: opacity 0.3s ease;
    }
    .section-surface:hover::before,
    .section-surface:focus-within::before {
        opacity: 1;
    }
    .section-shell {
        position: relative;
        z-index: 1;
    }
    .section-heading {
        display: inline-flex;
        align-items: center;
        gap: 1rem;
        font-size: clamp(1.5rem, 3vw, 2.5rem);
        font-weight: 800;
        color: #ff549d;
        margin-bottom: 1.5rem;
        letter-spacing: 0.04em;
    }
    .section-heading::after {
        content: "";
        display: block;
        height: 2px;
        width: clamp(80px, 18vw, 160px);
        background: linear-gradient(90deg, rgba(255, 84, 157, 0.9), transparent);
    }
    .section-subtitle {
        max-width: 52ch;
        margin: 0 auto 2.5rem auto;
        color: rgba(255, 255, 255, 0.72);
        font-size: clamp(1rem, 2vw, 1.1rem);
        line-height: 1.7;
    }
    .hero-section {
        padding-top: clamp(3rem, 6vw, 4rem);
        margin-bottom: clamp(2.5rem, 4vw, 3.5rem);
    }
    .hero-content {
        display: grid;
        gap: clamp(2rem, 3vw, 3rem);
        grid-template-columns: repeat(1, minmax(0, 1fr));
    }
    @media (min-width: 768px) {
        .hero-content {
            grid-template-columns: repeat(2, minmax(0, 1fr));
            align-items: center;
        }
    }
    .hero-text {
        text-align: left;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }
    .hero-highlight-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
        list-style: none;
        margin: 0;
        padding: 0;
    }
    .hero-highlight-list li {
        padding: 0.35rem 0.9rem;
        border-radius: 999px;
        border: 1px solid rgba(255, 84, 157, 0.4);
        background: rgba(255, 84, 157, 0.12);
        font-size: 0.8rem;
        letter-spacing: 0.03em;
    }
    .hero-visual {
        position: relative;
        isolation: isolate;
    }
    .hero-visual::after {
        content: "";
        position: absolute;
        inset: 10% 8% 12% 8%;
        border-radius: 24px;
        border: 1px solid rgba(255, 255, 255, 0.12);
        pointer-events: none;
        z-index: 1;
    }
    .hero-visual img {
        border-radius: 28px;
        box-shadow: 0 25px 60px rgba(10, 4, 25, 0.55);
    }
    .gameplay-card {
        display: flex;
        flex-direction: column;
        gap: 0;
        border-radius: 26px;
        border: 1px solid rgba(255, 84, 157, 0.18);
        overflow: hidden;
        background: linear-gradient(135deg, rgba(47, 34, 53, 0.75), rgba(35, 26, 34, 0.85));
        box-shadow: 0 22px 50px rgba(8, 3, 18, 0.6);
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }
    .gameplay-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 32px 70px rgba(8, 3, 20, 0.65);
    }
    @media (min-width: 768px) {
        .gameplay-card {
            flex-direction: row;
            min-height: 18rem;
        }
    }
    .gameplay-media {
        position: relative;
        flex: 1;
        overflow: hidden;
    }
    .gameplay-media::after {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(120deg, rgba(5, 2, 15, 0.05), rgba(255, 84, 157, 0.18));
        mix-blend-mode: screen;
        pointer-events: none;
    }
    .gameplay-media img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s ease;
    }
    .gameplay-card:hover .gameplay-media img,
    .gameplay-card:focus-within .gameplay-media img {
        transform: scale(1.08);
    }
    .gameplay-copy {
        flex: 1;
        display: flex;
        align-items: center;
        padding: clamp(1.75rem, 3vw, 2.75rem);
        background: rgba(35, 26, 34, 0.92);
    }
    .feature-card {
        position: relative;
        border-radius: 22px;
        border: 1px solid rgba(255, 84, 157, 0.18);
        background: rgba(44, 31, 47, 0.75);
        padding: 1.5rem;
        overflow: hidden;
        backdrop-filter: blur(10px);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 18px 45px rgba(8, 3, 18, 0.55);
    }
    .feature-card::before {
        content: "";
        position: absolute;
        inset: -40%;
        background: radial-gradient(circle at top left, rgba(255, 84, 157, 0.3), transparent 60%);
        opacity: 0;
        transition: opacity 0.4s ease, transform 0.4s ease;
    }
    .feature-card:hover::before,
    .feature-card:focus-within::before {
        opacity: 1;
        transform: scale(1.05);
    }
    .feature-card:hover,
    .feature-card:focus-within {
        transform: translateY(-6px);
        box-shadow: 0 26px 60px rgba(8, 3, 20, 0.6);
    }
    .feature-card h3 {
        font-size: 1.1rem;
        color: #ff82c0;
    }
    .feature-card p {
        color: rgba(255, 255, 255, 0.75);
    }
    .guides-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 22px;
        border: 1px solid rgba(255, 84, 157, 0.18);
        overflow: hidden;
        background: rgba(35, 26, 34, 0.8);
    }
    .guides-card:hover,
    .guides-card:focus-within {
        transform: translateY(-6px);
        box-shadow: 0 20px 40px rgba(8, 3, 20, 0.6);
    }
    .guides-card img {
        height: 200px;
        width: 100%;
        object-fit: cover;
    }
    .review-card {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        text-align: center;
        background: rgba(47, 34, 53, 0.75);
        border-radius: 22px;
        border: 1px solid rgba(255, 84, 157, 0.18);
        padding: 2rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .review-card:hover,
    .review-card:focus-within {
        transform: translateY(-8px);
        box-shadow: 0 22px 46px rgba(9, 4, 24, 0.6);
    }
    .faq-grid {
        display: grid;
        grid-template-columns: repeat(1, minmax(0, 1fr));
        gap: 1.5rem;
        text-align: left;
    }
    @media (min-width: 768px) {
        .faq-grid {
            grid-template-columns: repeat(2, minmax(0, 1fr));
        }
    }
    .faq-item {
        padding-bottom: 1.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.15);
    }
    .faq-item h3 {
        font-size: 1rem;
        color: #ff82c0;
    }
    .faq-item p {
        color: rgba(255, 255, 255, 0.72);
        margin-top: 0.75rem;
    }
    .flip-card {
        perspective: 1200px;
        height: 320px;
        outline: none;
        cursor: pointer;
        transition: box-shadow 0.3s ease, transform 0.3s ease;
        border-radius: 24px;
    }
    .flip-card:focus-visible {
        box-shadow: 0 0 0 3px rgba(255, 84, 157, 0.7);
        transform: translateY(-4px);
    }
    .flip-card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        transition: transform 0.8s ease;
        transform-style: preserve-3d;
    }
    .flip-card:hover .flip-card-inner,
    .flip-card:focus-within .flip-card-inner,
    .flip-card.is-flipped .flip-card-inner {
        transform: rotateY(180deg);
    }
    .flip-card-front,
    .flip-card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        display: flex;
        flex-direction: column;
        background: rgba(44, 31, 47, 0.8);
        border-radius: 24px;
        border: 1px solid rgba(255, 84, 157, 0.18);
    }
    .flip-card-front img {
        border-radius: 24px 24px 0 0;
    }
    .flip-card-back {
        transform: rotateY(180deg);
        padding: 1.5rem;
        gap: 1rem;
    }
</style>
<main class="page-shell bg-green bg-opacity-90 px-6 md:px-10 py-16 text-md mx-auto font-mono max-w-6xl">
    <section class="hero-section section-surface">
        <div class="hero-content">
            <div class="hero-text">
                <h1 class="text-4xl md:text-8xl font-sg font-black text-light drop-shadow-red bg-clip-text text-transparent bg-gradient-to-r
                        from-light to-red">
                    {{ translations.pages.index.hero.title }}
                </h1>
                <p class="text-2xl font-sg font-black bg-clip-text text-transparent bg-gradient-to-r from-light to-red">{{ translations.pages.index.hero.subtitle }}</p>
                <p class="text-md opacity-75">{{ translations.pages.index.hero.content }}</p>
                <ul class="hero-highlight-list">
                    {% for highlight in translations.pages.index.ingame.content %}
                        {% if loop.index <= 3 %}
                            <li>{{ highlight.title }}</li>
                        {% endif %}
                    {% endfor %}
                </ul>
                <a
                    href="/#cta"
                    class="shadow-lg shadow-red w-60 py-3 px-6 bg-gradient-to-br from-green to-green via-red animate-gradient-x rounded-full
                        font-black hover:scale-110 transition duration-300 font-sg text-light text-center">{{ translations.pages.index.hero.buttonText }}</a>
            </div>
            <div class="hero-visual">
                <img src="{{ translations.pages.index.hero.media.url }}" alt="{{ translations.pages.index.hero.media.alt }}" title="{{ translations.pages.index.hero.media.title }}" class="w-full m-auto" loading="lazy" decoding="async">
            </div>
        </div>
    </section>
    <section class="section-surface text-center h-full" id="about">
        <div class="relative w-full h-full overflow-hidden rounded-3xl">
            <img src="/assets/hero.jpg" class="absolute inset-0 w-full h-full object-cover filter blur-3xl opacity-60" alt="Miside hős háttér" loading="lazy" decoding="async">
            <div class="relative inset-0 flex items-center justify-center px-4 md:px-16 py-10">
                <div class="space-y-6">
                    <h2 class="section-heading justify-center">{{ translations.pages.index.about.title }}</h2>
                    <div class="text-md opacity-75 space-y-4">
                        {% for paragraph in translations.pages.index.about.content %}
                            <p>{{ paragraph }}</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="section-surface" id="gameplay">
        <h2 class="section-heading">{{ translations.pages.index.gameplay.title }}</h2>
        <p class="section-subtitle">{{ translations.pages.index.gameplay.subtitle }}</p>
        <div class="flex flex-col gap-8">
            {% for feature in translations.pages.index.gameplay.content %}
                <div class="gameplay-card {% if loop.index is even %}md:flex-row-reverse{% endif %}">
                    <div class="gameplay-media">
                        <img src="{{ feature.media.url }}" alt="{{ feature.media.alt }}" title="{{ feature.media.title }}" loading="lazy" decoding="async"/>
                    </div>
                    <div class="gameplay-copy">
                        <div>
                            <h3 class="text-xl font-bold mb-4 font-sg text-light">{{ feature.title }}</h3>
                            <p class="text-md opacity-75">{{ feature.content }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
    <section class="section-surface" id="features">
        <h2 class="section-heading justify-center">{{ translations.pages.index.ingame.title }}</h2>
        <p class="section-subtitle text-center">{{ translations.pages.index.ingame.subtitle }}</p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {% for feature in translations.pages.index.ingame.content %}
                <div class="feature-card flex flex-col gap-3">
                    <h3 class="text-sm font-bold font-sg">{{ feature.title }}</h3>
                    <p class="text-sm opacity-75">{{ feature.content }}</p>
                </div>
            {% endfor %}
        </div>
    </section>
    <section class="section-surface" id="mitas">
        <h2 class="section-heading justify-center">{{ translations.pages.index.mitas.title }}</h2>
        <p class="section-subtitle text-center">{{ translations.pages.index.mitas.subtitle }}</p>
        <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-8">
            {% for item in translations.pages.index.mitas.content %}
                <div class="flip-card" tabindex="0" role="button" aria-expanded="false" aria-label="{{ translations.pages[item.path].character }} kártya részletei">
                    <div class="flip-card-inner">
                        <div class="flip-card-front overflow-hidden">
                            <img src="{{ translations.pages[item.path].media.url }}" alt="{{ translations.pages[item.path].character }}" class="w-full h-60 object-cover object-top" loading="lazy" decoding="async">
                            <p class="text-md font-bold p-4 text-center font-sg text-light">{{ translations.pages[item.path].character }}</p>
                        </div>
                        <div class="flip-card-back text-xs">
                            <h3 class="text-lg font-bold font-sg text-light">
                                <a href="/{{ item.path }}" class="underline">
                                    {{ translations.pages[item.path].character }}
                                </a>
                            </h3>
                            <div class="space-y-4">
                                <div>
                                    <h4 class="font-bold mb-2 text-light">Megjelenés</h4>
                                    <p class="opacity-75">{{ translations.pages[item.path]["quick-information"]["content"][1]["content"] }}</p>
                                </div>
                                <div>
                                    <h4 class="font-bold mb-2 text-light">Tulajdonságok</h4>
                                    <p class="opacity-75">{{ translations.pages[item.path]["quick-information"]["content"][2]["content"] }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
    <section class="section-surface" id="guides">
        <h2 class="section-heading justify-center">{{ translations.pages.index.guides.title}}</h2>
        <p class="section-subtitle text-center">{{ translations.pages.index.guides.subtitle }}</p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {% for post in translations.pages.blogentry.blogs %}
                <article class="guides-card">
                    <a href="{{ post.path }}" class="flex flex-col h-full focus:outline-none focus-visible:ring-2 focus-visible:ring-light">
                        <img src="{{ post.media.url }}" alt="{{ post.media.alt }}" title="{{ post.media.title }}" loading="lazy" decoding="async">
                        <div class="p-5 space-y-3">
                            <p class="text-xs opacity-75 uppercase tracking-wide">{{ post.date }}</p>
                            <h3 class="text-sm font-bold text-light">{{ post.name }}</h3>
                            <p class="text-xs text-yellow line-clamp-4">{{ post.desc }}</p>
                        </div>
                    </a>
                </article>
            {% endfor %}
        </div>
    </section>
    <section class="section-surface" id="reviews">
        <h2 class="section-heading justify-center">{{ translations.pages.index.reviews.title }}</h2>
        <p class="section-subtitle text-center">{{ translations.pages.index.reviews.subtitle }}</p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {% for review in translations.pages.index.reviews.content %}
                <article class="review-card">
                    <div class="border-b border-light/40 pb-4">
                        <h3 class="text-sm font-bold text-light">{{ review.name }}</h3>
                        <p class="text-sm opacity-75">{{ review.role }}</p>
                        <div class="flex justify-center text-2xl text-light mt-2">★★★★★</div>
                    </div>
                    <p class="text-sm opacity-75">{{ review.content }}</p>
                </article>
            {% endfor %}
        </div>
    </section>
    <section id="faqs" class="section-surface">
        <h2 class="section-heading justify-center">{{ translations.pages.index.faq.title }}</h2>
        <p class="section-subtitle text-center">{{ translations.pages.index.faq.subtitle }}</p>
        <div class="faq-grid">
            {% for item in translations.pages.index.faq.content %}
                <div class="faq-item">
                    <h3 class="text-sm font-bold text-light">{{ item.question }}</h3>
                    <p class="text-sm opacity-75">{{ item.answer }}</p>
                </div>
            {% endfor %}
        </div>
    </section>
</main>
